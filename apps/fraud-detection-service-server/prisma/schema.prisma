datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Transaction {
  amount             Float?
  createdAt          DateTime  @default(now())
  destinationAccount String?
  id                 String    @id @default(cuid())
  isFraudulent       Boolean?
  sourceAccount      String?
  status             String?
  timestamp          DateTime?
  transactionId      String?
  updatedAt          DateTime  @updatedAt
}

model Alert {
  alertId     String?
  createdAt   DateTime  @default(now())
  description String?
  id          String    @id @default(cuid())
  status      String?
  timestamp   DateTime?
  typeField   String?
  updatedAt   DateTime  @updatedAt
}

model MuleAccount {
  accountId String?
  createdAt DateTime @default(now())
  flags     Int?
  id        String   @id @default(cuid())
  isMule    Boolean?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  biometricData      Json?
  createdAt          DateTime      @default(now())
  email              String?       @unique
  firstName          String?
  id                 String        @id @default(cuid())
  lastName           String?
  muleAccounts       MuleAccount[]
  password           String
  phoneNumber        String?
  roles              Json
  socialMediaProfile Json?
  updatedAt          DateTime      @updatedAt
  username           String        @unique
}
